<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="exerciseProvider"
                      transaction-type="JTA">
        <!-- <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider> -->
        <jta-data-source>jdbc/datacar</jta-data-source>
        <properties>
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.cache.shared.default"
                      value="true" />
            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>

            <!--<property name="javax.persistence.schema-generation.create-source" value="metadata-then-script"/>-->
            <!--<property name="javax.persistence.sql-load-script-source" value="META-INF/seed.sql"/>-->
        </properties>
    </persistence-unit>
</persistence>
